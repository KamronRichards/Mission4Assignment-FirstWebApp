@{
}
@model GradeCalculatorModel;

<!--Grade category form to input grade percentage-->
<h4>Grade Categories:</h4>
<form method="post">
    <label>Assignments (50%):</label>
    <input id="assignmentpct" asp-for="Assignment"/><br />
    <label>Group Project (10%):</label>
    <input id="groupprojectpct" asp-for="Groupproject"/><br />
    <label>Quizzes (10%):</label>
    <input id="quizpct" asp-for="Quiz" /><br />
    <label>Midterm Exam (10%):</label>
    <input id="midtermexampct" asp-for="Midterm"/><br />
    <label>Final Exam (10%):</label>
    <input id="finalexampct" asp-for="FinalExam"/><br />
    <label>INTEX (10%):</label>
    <input id="intexpct" asp-for="Intex"/><br />
    <!--Calculation button-->
    <input id="btnsend" type="submit" value="Calculate Grade" /><br /><br />
    <label>Percentage:</label>
    <span id="percentage"></span>
    <br>
    <label>Letter Grade:</label>
    <span id="letter-grade"></span>

    <!--Receive the requirement error message-->
    <div asp-validation-summary="All"></div>

</form>
